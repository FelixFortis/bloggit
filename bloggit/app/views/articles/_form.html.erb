<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :title, input_html: { "ng-model" => 'newArticle.title' } %>
      <%= f.input :body, input_html: { "ng-model" => 'newArticle.body' } %>
  </div>
  <markdown>{{newArticle.body}}</markdown>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


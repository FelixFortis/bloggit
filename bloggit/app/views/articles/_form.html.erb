<div class="col-lg-8">
    <%= simple_form_for @article, input_html: { class: "form-horizontal" } do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
            <%= f.input :title, input_html: { "ng-model" => 'newArticle.title' } %>
            <br />
            <%= f.input :body, input_html: { "ng-model" => 'newArticle.body', rows: "6", class: "input-textarea" } %>
        </div>

        <div class="form-group">
            <%= f.button :submit, { class: "btn-primary" } %>
        </div>
    <% end %>
</div>
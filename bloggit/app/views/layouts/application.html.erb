<!DOCTYPE html>
<html>
<head>
  <title>Bloggit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-main">
  <% if errors.any? %>
    <p class="notice"><%= notice %></p>                                                                                                                                   
    <p class="alert"><%= alert %></p>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
